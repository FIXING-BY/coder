<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/codemirror.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.2/mode/python/python.min.js"></script>

<script>
    const editor = CodeMirror.fromTextArea(document.getElementById("editor"), {
        mode: "python", theme: "material-ocean", lineNumbers: true, autoCloseBrackets: true
    });

    let pyodideInstance = null;
    async function initPyodide() { pyodideInstance = await loadPyodide(); }
    initPyodide();

    async function runInNewWindow() {
        if (!pyodideInstance) return alert("YÃ¼kleniyor...");
        const code = editor.getValue();
        
        try {
            pyodideInstance.runPython(`import sys, io\nsys.stdout = io.StringIO()`);
            await pyodideInstance.runPythonAsync(code);
            const stdout = pyodideInstance.runPython("sys.stdout.getvalue()");

            const resWin = window.open('', '_blank');
            resWin.document.write(`
                <body style="background:#0f111a; color:#cfc9c2; font-family:monospace; padding:20px; white-space:pre-wrap;">${stdout || 'SonuÃ§ yok.'}</body>
            `);
            resWin.document.close();
        } catch (err) {
            const errWin = window.open('', '_blank');
            errWin.document.write(`<body style="background:#1a1b26; color:#f7768e; font-family:monospace; padding:20px;">${err}</body>`);
            errWin.document.close();
        }
    }

    const overlay = document.getElementById('overlay');
    function openModal() { overlay.style.display = 'flex'; }
    function closeModal() { overlay.style.display = 'none'; }
    function downloadFile() {
        const code = editor.getValue();
        let name = document.getElementById('filename').value || "script";
        if(!name.endsWith('.py')) name += '.py';
        const blob = new Blob([code], { type: 'text/plain' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url; a.download = name; a.click();
        closeModal();
    }
</script>
